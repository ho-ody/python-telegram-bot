pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'building...'
                sh 'DOCKER_TLS_VERIFY=0 docker compose -f devops/docker-compose.yml build python-telegram-bot'
            }
            post {
                always{
                    echo '   done'
                }
                success {
                    echo '   success'
                }
                failure {
                    echo '   failure'
                }
            }
        }
        stage('Test') {
                    steps {
                        echo 'testing...'
                        sh 'DOCKER_TLS_VERIFY=0 docker compose -f devops/docker-compose.yml build python-telegram-bot-tests'
                    }
                    post {
                        always{
                            echo '   done'
                        }
                        success {
                            echo '   success'
                        }
                        failure {
                            echo '   failure'
                        }
                    }
                }
    }
}