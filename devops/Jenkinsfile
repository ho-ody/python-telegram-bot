pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'building...'
                //sh 'DOCKER_TLS_VERIFY=0 docker compose -f devops/docker-compose.yml build python-telegram-bot'
                sh 'DOCKER_TLS_VERIFY=0 docker compose -f devops/docker-compose.yml build python-telegram-bot:${BUILD_NUMBER}'
            }
            post {
                always{
                    echo '   done'
                }
                success {
                    echo '   success'
                }
                failure {
                    echo '   failure'
                }
            }
        }
        stage('Test') {
                steps {
                    echo 'testing...'
                    sh 'DOCKER_TLS_VERIFY=0 docker compose -f devops/docker-compose.yml build python-telegram-bot-tests'
                }
                post {
                    always{
                        echo '   done'
                    }
                    success {
                        echo '   success'
                    }
                    failure {
                        echo '   failure'
                    }
                }
            }
        stage('Deploy') {
                environment {
                    IMAGE_TAG = "python-telegram-bot:${BUILD_NUMBER}"
                }
                steps {
                    echo 'deploying...'
                    sh "DOCKER_TLS_VERIFY=0 docker compose -f devops/docker-compose.yml build --build-arg IMAGE_TAG=${IMAGE_TAG} python-telegram-bot"
                    sh "DOCKER_TLS_VERIFY=0 docker tag python-telegram-bot:latest ${IMAGE_TAG}"
                    sh "DOCKER_TLS_VERIFY=0 docker push ${IMAGE_TAG}"
                    sh "DOCKER_TLS_VERIFY=0 docker-compose -f devops/docker-compose.yml up -d"
                }
                post {
                    always{
                        echo '   done'
                    }
                    success {
                        echo '   success'
                    }
                    failure {
                        echo '   failure'
                    }
                }
            }
    }
}